			var array_picture = [{0:'stars_big_0'},{0.5:'stars_big_1'},{1:'stars_big_2'},{1.5:'stars_big_3'},{2:'stars_big_4'}];
			var score=dataresult.result.game_data[n].level;
			if(score==null||score==""||score=="null"){
				score=0;
			}
			var star_array=[];
			var star_pic='';
			for(var i=0;  i<5; i++){
				if(score>2){
					star_array.push(2);
					score-=2;
				}else{
					star_array.push(score);
					score=0;
				}
			}
			$.each(star_array,function(){
				if (this <= 0)
				{
					star_pic = array_picture[0][0];							
				}
				else if (this <= 0.5)
				{
					star_pic = array_picture[1][0.5];
				}
				else if (this < 1.5)
				{
					star_pic = array_picture[2][1];
				}
				else if (this < 2)
				{
					star_pic = array_picture[3][1.5];
				}
				else if (this >= 2)
				{
					star_pic = array_picture[4][2];
				}
